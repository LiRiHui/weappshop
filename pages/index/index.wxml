<!--index.wxml-->
<view class="page">
  <view class="images-panel">
    <swiper indicator-dots="true">
      <swiper-item>
        <image class="img-swiper-item" mode="scaleToFill" src="/src/images/default.png"></image>
      </swiper-item>
      <swiper-item>
        <image class="img-swiper-item" mode="scaleToFill" src="/src/images/logo-mango.jpeg"></image>
      </swiper-item>
      <swiper-item>
        <image class="img-swiper-item" mode="scaleToFill" src="/src/images/default.png"></image>
      </swiper-item>
    </swiper>
  </view>

  <view class="tab-panel">
    <view class="tabbar">
      <view class="tabbar-item" data-tabid="0" catchtap="selectTab">最新公告</view>
      <view class="tabbar-item" data-tabid="1" catchtap="selectTab">门店优惠</view>
    </view>
    <view class="tabs">
      <view class="{{tabSelectedIndex == 0?'show':'hide'}} tab">公告</view>
      <view class="{{tabSelectedIndex == 1?'show':'hide'}} tab">优惠</view>
    </view>
  </view>

  <view class="info-panel">
    <view class="info-basic-group">
      <view class="info-logo info-basic">
        <image src="/src/images/logo-mango.jpeg"></image>
      </view>
      <view class="info-name-group info-basic">{{name}}</view>
      <view class="info-phone info-basic">
        <image src="/src/images/default.png" catchtap="phoneCall"></image>
      </view>
      <view class="info-wechat info-basic">
        <image src="/src/images/code.jpeg" catchtap="showCode"></image>
      </view>
    </view>
    <view class="info-location" catchtap="showLocation">
      <view class="info-location-left">{{location.address}}</view>
      <view class="right-arrow">></view>
    </view>
    <view class="info-open-time">
      {{openTime}}
    </view>
  </view>
</view>