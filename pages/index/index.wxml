<!--index.wxml-->
<import src="/templates/roomCell/roomCell.wxml" />
<view class="page">
  <scroll-view scroll-y="true" class="scroll-area">
    <view class="images-panel">
      <swiper autoplay="true" bindchange="swiperChanged" catchtap="showImages" indicator-dots="true" circular="true">
        <block wx:for="{{bannerImages}}" wx:key="item">
          <swiper-item>
            <image class="img-swiper-item" mode="aspectFill" src="{{item}}"></image>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <!--<view class="page">-->
    <view class="tabbar-panel">
      <view class="tabbar">
        <view class="{{tabSelectedIndex == 0?'tabbar-item-selected':'tabbar-item-normal'}} tabbar-item" data-tabid="0" catchtap="selectTab">
          <image mode="aspectFit" src="/src/images/{{tabSelectedIndex == 0?'introductionS.png':'introduction.png'}}" />
        </view>
        <view class="{{tabSelectedIndex == 1?'tabbar-item-selected':'tabbar-item-normal'}}  tabbar-item" data-tabid="1" catchtap="selectTab">
          <image mode="aspectFit" src="/src/images/{{tabSelectedIndex == 1?'hotelS.png':'hotel.png'}}" />
        </view>
        <view class="{{tabSelectedIndex == 2?'tabbar-item-selected':'tabbar-item-normal'}}  tabbar-item" data-tabid="2" catchtap="selectTab">
          <image mode="aspectFit" src="/src/images/{{tabSelectedIndex == 2?'petBeautifyS.png':'petBeautify.png'}}" />
        </view>
        <view class="{{tabSelectedIndex == 3?'tabbar-item-selected':'tabbar-item-normal'}}  tabbar-item" data-tabid="3" catchtap="selectTab">
          <image mode="aspectFit" src="/src/images/{{tabSelectedIndex == 3?'salePetS.png':'salePet.png'}}" />
        </view>
      </view>
      <!-- tabbar end -->
    </view>
    <!-- tabbar-panel end -->
    <view class="tab-panel">
      <view class="tabs">
        <view class="tab-background-top">
          <image mode="aspectFit" src="/src/images/tab_bg_top.png" />
        </view>
        <!--tab 0  -->
        <view class="{{tabSelectedIndex == 0?'show':'hide'}} tab">
          <!-- <view class="tab-background-top">
            <image mode="aspectFit" src="/src/images/tab_bg_top.png" />
          </view> -->
          <view class="tab-content">
            <view class="introduction">
              <text class="introduction-text" space="emsp">{{introduction}}</text>
            </view>
          </view>

        </view>
        <!-- tab 0 end -->

        <!-- tab 1  -->
        <view class="{{tabSelectedIndex == 1? 'show': 'hide'}} tab">
          <!-- <view class="tab-background-top">
            <image mode="aspectFit" src="/src/images/tab_bg_top.png" />
          </view> -->
          <view class="tab-content">
            <view class="day-care">
              <view class="day-care-price">
                <view class="day-care-label">
                  <image class="bone" mode="aspectFit" src="/src/images/bone.png" />
                  <text class="room-label-text">日托价格</text>
                  <image class="bone" mode="aspectFit" src="/src/images/bone.png" />
                </view>
                <view class="day-care-price-text">
                  <text space="emsp">小型犬、猫 20元/6小时</text>
                </view>
                <view style="background-color:#F495A0" class="day-care-price-text">
                  <text space="emsp">中型犬、猫 25元/6小时</text>
                </view>
                <view class="day-care-price-text">
                  <text space="emsp">大型犬、猫 35元/6小时</text>
                </view>
                <view style="background-color:#784A4F" class="day-care-price-text">
                  <text>不足6h按6h计算</text>
                </view>
              </view>
              <view class="day-care-info">
                <image class="day-care-info-claw" mode="aspectFit" src="/src/images/claw.png"></image>
                <image class="day-care-info-ps" mode="aspectFit" src="/src/images/ps.png"></image>
                <view class="day-care-info-text">
                  <text>寄养七天送洗澡一次\n两宠物共住一房加收50%房费\n节假日房价上调10% 请您谅解</text>
                </view>
              </view>
            </view>
            <view class="rooms">
              <view class="room-label">
                <image class="bone" mode="aspectFit" src="/src/images/bone.png" />
                <text class="room-label-text">住宿价格</text>
                <image class="bone" mode="aspectFit" src="/src/images/bone.png" />
              </view>

              <block wx:for="{{rooms}}">
                <template is="roomCell" data="{{...item}}"></template>
              </block>
            </view>

          </view>
        </view>
        <!--tab 1 end  -->

        <!--tab 2  -->
        <view class="{{tabSelectedIndex == 2? 'show': 'hide'}} tab">
          <!-- <view class="tab-background-top">
            <image mode="aspectFit" src="/src/images/tab_bg_top.png" />
          </view> -->
          <view class="tab-content">
            <view wx:for="{{markups}}" class="markup-grid-cell">
              <image mode="aspectFit" data-url="{{item}}" src="{{item}}"></image>
            </view>
          </view>
        </view>
        <!-- tab 2 end  -->

        <!-- tab 3  -->
        <view class="{{tabSelectedIndex == 3? 'show': 'hide'}} tab">

          <view class="tab-content">

          </view>
        </view>
        <!--tab 3 end  -->
      </view>
      <!-- tabs end -->
    </view>
    <!-- tab-panel end -->
  </scroll-view>
  <view class="tab-background-bottom">
    <image mode="aspectFit top" src="/src/images/tab_bg_bottom.png" />
  </view>
  <view class="info-panel">
    <view class="info-basic-root">
      <view class="info-basic-group">
        <!-- <image mode="scaleToFill" style="margin-left:-450rpx;width:450rpx;position:absolute;height:100%;" src="/src/images/storeNameColumn.png"></image> -->
        <view class="info-basic-logo">
          <view class="info-logo">
            <image mode="aspectFit" src="/src/images/logo.png"></image>
          </view>
          <view class="info-name-group ">
            <view class="info-name-chinese ">
              {{name}}
            </view>
            <view class="info-name-english ">
              {{englishName}}
            </view>
            <view class="info-name-nickName ">
              {{nickName}}
            </view>
          </view>
        </view>

        <!-- info-basic-logo end -->
        <view class="info-phone info-basic-right">
          <image mode="aspectFit" src="/src/images/phone.png" catchtap="phoneCall" />
        </view>
        <view class="info-wechat info-basic-right">
          <button open-type="contact" class="wechat-button">
            <image mode="aspectFit" src="/src/images/wx.png "/>
          </button>

        </view>

      </view>
      <!-- info-basic-group end -->
    </view>
    <!-- info-basic-root end -->
    <view class="info-location " catchtap="showLocation">
      <view class="info-location-left ">
        <image mode="aspectFit" src="/src/images/address.png"></image>
        <view class="text-vertical-middle-wrapper ">
          {{location.address}}
        </view>
      </view>
      <view class="right-arrow ">
        <image mode="aspectFit" src="/src/images/addressArrow.png "></image>
      </view>

      <view class="info-open-time ">
        <view class="info-open-time-left ">
          <image mode="aspectFit" src="/src/images/time.png "></image>
          <view class="text-vertical-middle-wrapper ">
            {{openTime}}
          </view>
        </view>
      </view>
      <!-- info-open-time end -->
    </view>
    <!-- info-location end -->
  </view>
  <!-- info-panel end -->
</view>
<!-- page end -->